/**timetableList.wxss**/

page {
  background-color: #F5F5F5;
}

.container {
  min-height: 100vh;
  padding: 40rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.import-btn {
  font-size: 28rpx;
  color: #667eea;
  padding: 16rpx 32rpx;
  border: 1rpx solid #667eea;
  border-radius: 8rpx;
  background-color: #FFFFFF;
}

.import-btn:active {
  background-color: #EEF2FF;
}

.add-btn {
  font-size: 28rpx;
  color: #1A1A1A;
  padding: 16rpx 32rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 8rpx;
  background-color: #FFFFFF;
}

.add-btn:active {
  background-color: #F5F5F5;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.timetable-item {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.item-content:active {
  background-color: #FAFAFA;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.item-name {
  font-size: 32rpx;
  color: #1A1A1A;
}

.main-tag {
  font-size: 22rpx;
  color: #FFFFFF;
  background-color: #1A1A1A;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.default-tag {
  font-size: 22rpx;
  color: #667eea;
  background-color: #EEF2FF;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.item-arrow {
  font-size: 36rpx;
  color: #CCCCCC;
}

.item-actions {
  display: flex;
  padding: 20rpx 32rpx;
  gap: 40rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666666;
}

.action-text:active {
  color: #1A1A1A;
}

.action-text.share {
  color: #667eea;
}

.action-text.delete {
  color: #FF6B6B;
}

.tip {
  margin-top: 40rpx;
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #999999;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.modal-close {
  font-size: 40rpx;
  color: #999999;
  padding: 0 10rpx;
}

.modal-body {
  padding: 40rpx 32rpx;
}

/* 分享结果样式 */
.share-result {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.share-code-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background-color: #F5F7FA;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.share-code {
  font-size: 48rpx;
  font-weight: 700;
  color: #1A1A1A;
  letter-spacing: 8rpx;
  font-family: monospace;
}

.copy-btn {
  background-color: #667eea;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

.copy-btn:active {
  background-color: #5a6fd6;
}

.copy-text {
  font-size: 26rpx;
  color: #FFFFFF;
}

.share-tip {
  font-size: 24rpx;
  color: #999999;
}

.share-loading {
  display: flex;
  justify-content: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 导入样式 */
.import-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  display: block;
}

.import-input {
  width: 100%;
  height: 88rpx;
  background-color: #F5F7FA;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1A1A1A;
  text-align: center;
  letter-spacing: 4rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.import-actions {
  display: flex;
  justify-content: flex-end;
  gap: 40rpx;
}

.import-cancel {
  font-size: 30rpx;
  color: #666666;
  padding: 16rpx 24rpx;
}

.import-confirm {
  font-size: 30rpx;
  color: #CCCCCC;
  padding: 16rpx 32rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
}

.import-confirm.active {
  color: #FFFFFF;
  background-color: #667eea;
}

.import-confirm.active:active {
  background-color: #5a6fd6;
}
