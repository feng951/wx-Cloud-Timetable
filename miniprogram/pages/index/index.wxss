/**index.wxss**/

page {
  background-color: #FFFFFF;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 安全区域 - 避开状态栏 */
.safe-area-top {
  height: constant(safe-area-inset-top);
  height: env(safe-area-inset-top);
  min-height: 40rpx;
  background-color: #FFFFFF;
}

/* 登录区域 */
.login-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.login-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 80rpx;
}

.login-btn {
  width: 480rpx;
  height: 96rpx;
  background-color: #000000;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.login-btn::after {
  border: none;
}

/* 协议同意区域 */
.agreement-section {
  padding: 0 0 30rpx;
}

.checkbox-wrapper {
  display: flex;
  align-items: flex-start;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #999999;
  border-radius: 4rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.checkbox.checked {
  background-color: #000000;
  border-color: #000000;
}

.check-icon {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.agreement-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
}

.text-normal {
  color: #666666;
}

.text-link {
  color: #000000;
  text-decoration: underline;
}

/* 禁用状态的登录按钮 */
.login-btn.primary.disabled {
  background-color: #CCCCCC;
  color: #FFFFFF;
}

.modal-footer {
  margin-top: 32rpx;
  text-align: center;
}

.privacy-text {
  font-size: 22rpx;
  color: #999999;
}

.privacy-links {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 8rpx;
  flex-wrap: wrap;
}

.privacy-link {
  font-size: 22rpx;
  color: #000000;
  text-decoration: underline;
}

/* 主内容区 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #FFFFFF;
}

/* 顶部日期栏 */
.date-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #E5E5E5;
  flex-shrink: 0;
}

.date-info {
  display: flex;
  flex-direction: column;
}

.timetable-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}

.date-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.date-full {
  font-size: 28rpx;
  color: #666666;
}

.week-info {
  font-size: 24rpx;
  color: #000000;
  background-color: #F5F5F5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  background-color: #F5F5F5;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #000000;
}

.action-btn:active {
  background-color: #E5E5E5;
}

/* 周数指示器 */
.week-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #F5F5F5;
  gap: 40rpx;
  flex-shrink: 0;
}

.week-nav {
  width: 56rpx;
  height: 56rpx;
  background-color: #F5F5F5;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #000000;
  font-weight: 600;
}

.week-nav:active {
  background-color: #E5E5E5;
}

.week-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 140rpx;
}

.current-week-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  text-align: center;
}

.back-to-current {
  margin-top: 8rpx;
  padding: 6rpx 16rpx;
  background-color: #000000;
  border-radius: 4rpx;
}

.back-to-current:active {
  background-color: #333333;
}

.back-text {
  font-size: 22rpx;
  color: #FFFFFF;
}

/* 星期栏swiper */
.week-swiper {
  height: 120rpx;
  background-color: #FFFFFF;
  flex-shrink: 0;
}

.week-header {
  display: flex;
  height: 100%;
  padding: 10rpx 0;
  box-sizing: border-box;
}

/* 周标签列 */
.week-label-cell {
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #000000;
  border-radius: 0;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.week-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
  writing-mode: vertical-rl;
  text-orientation: mixed;
}

/* 日期格子 */
.day-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
  margin: 0 4rpx;
  border-radius: 4rpx;
  min-width: 0;
  position: relative;
}

.day-cell.active {
  background-color: #000000;
}

.day-cell.active .day-name,
.day-cell.active .day-date,
.day-cell.active .day-month {
  color: #FFFFFF;
}

.day-cell.is-monday::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 60%;
  background-color: #000000;
  border-radius: 0;
}

.day-name {
  font-size: 22rpx;
  color: #666666;
  margin-bottom: 4rpx;
}

.day-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
}

.day-month {
  font-size: 18rpx;
  color: #999999;
  margin-top: 2rpx;
}

/* 课表swiper */
.timetable-swiper {
  flex: 1;
  background-color: #FFFFFF;
}

.timetable-swiper swiper-item {
  height: 100%;
}

/* 课表滚动区 */
.timetable-scroll {
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
}

.timetable-body {
  width: 100%;
  padding-bottom: 40rpx;
}

.time-row {
  display: flex;
  width: 100%;
  min-height: 120rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.time-cell {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #FAFAFA;
  border-right: 1rpx solid #E5E5E5;
  padding: 16rpx 0;
  flex-shrink: 0;
}

.period-num {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}

.time-range {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.start-time, .end-time {
  font-size: 18rpx;
  color: #666666;
}

/* 课程格子 */
.course-slot {
  flex: 1;
  min-width: 0;
  padding: 6rpx;
  border-right: 1rpx solid #F5F5F5;
  min-height: 120rpx;
  display: flex;
  align-items: stretch;
}

.course-slot.today {
  background-color: #FAFAFA;
}

.course-slot:active {
  background-color: #F0F0F0;
}

.course-card {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
  padding: 12rpx 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.course-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.course-room {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 周指示点 */
.week-dots {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16rpx 0;
  background-color: #FFFFFF;
  gap: 12rpx;
  flex-shrink: 0;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 0;
  background-color: #CCCCCC;
  transition: all 0.3s ease;
}

.dot.active {
  width: 24rpx;
  background-color: #000000;
}

/* 空状态 */
.empty-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 40rpx;
}

.empty-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  align-items: center;
}

.import-btn {
  width: 280rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  color: #000000;
  font-size: 28rpx;
  border: 2rpx solid #000000;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.import-btn.primary {
  background-color: #000000;
  color: #FFFFFF;
}

.import-btn::after {
  border: none;
}

/* 响应式适配 */
@media screen and (min-width: 768px) {
  .course-slot {
    padding: 8rpx;
  }
  
  .course-name {
    font-size: 26rpx;
  }
  
  .course-room {
    font-size: 20rpx;
  }
}

/* 小屏幕适配 */
@media screen and (max-width: 375px) {
  .course-name {
    font-size: 20rpx;
  }
  
  .course-room {
    font-size: 16rpx;
  }
  
  .time-cell {
    width: 90rpx;
  }
  
  .week-label-cell {
    width: 80rpx;
  }
}

/* 未登录提示条 */
.login-hint-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000000;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.hint-text {
  font-size: 26rpx;
  color: #FFFFFF;
  flex: 1;
}

.hint-action {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 500;
  margin-left: 20rpx;
}

/* 登录引导弹窗 */
.login-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.login-modal {
  width: 520rpx;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  padding: 40rpx;
  position: relative;
}

.modal-close {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 32rpx;
  color: #666666;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  font-size: 28rpx;
  color: #666666;
}

.modal-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.login-btn.primary {
  width: 100%;
  height: 88rpx;
  background-color: #000000;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.login-btn.secondary {
  width: 100%;
  height: 80rpx;
  background-color: #FFFFFF;
  color: #666666;
  font-size: 28rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.login-btn::after {
  border: none;
}
