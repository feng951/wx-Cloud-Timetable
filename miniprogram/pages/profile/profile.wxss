/**profile.wxss - 极简黑白设计**/

page {
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', PingFang SC, 'Helvetica Neue', Arial, sans-serif;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 40rpx;
}

.login-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #000000;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-bottom: 40rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 400rpx;
  height: 88rpx;
  background-color: #000000;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  background-color: #333333;
}

/* 按钮文字通用样式 */
.btn-text {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

/* 隐私提示 */
.privacy-hint {
  margin-top: 32rpx;
  text-align: center;
}

.privacy-text {
  font-size: 22rpx;
  color: #999999;
}

.privacy-links {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 8rpx;
  flex-wrap: wrap;
}

.privacy-link {
  font-size: 22rpx;
  color: #000000;
  text-decoration: underline;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  border: 1rpx solid #E5E5E5;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 4rpx;
  margin-right: 24rpx;
  border: 2rpx solid #E5E5E5;
  background-color: #F5F5F5;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-id {
  font-size: 24rpx;
  color: #666666;
  font-family: monospace;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  border: 1rpx solid #E5E5E5;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-divider {
  width: 1rpx;
  background-color: #E5E5E5;
}

.stat-num {
  font-size: 44rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666666;
}

/* 菜单区域 */
.menu-section {
  margin-bottom: 24rpx;
}

.menu-group {
  background-color: #FFFFFF;
  border-radius: 4rpx;
  border: 1rpx solid #E5E5E5;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #FAFAFA;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  background-color: #F5F5F5;
}

.menu-text {
  font-size: 30rpx;
  color: #000000;
}

.menu-arrow {
  font-size: 32rpx;
  color: #999999;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #FFFFFF;
  color: #000000;
  font-size: 30rpx;
  font-weight: 500;
  border: 1rpx solid #000000;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background-color: #F5F5F5;
}

/* 登录引导弹窗 */
.login-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.login-modal {
  width: 520rpx;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  padding: 40rpx;
  position: relative;
}

.modal-close {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 32rpx;
  color: #666666;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  font-size: 28rpx;
  color: #666666;
}

.modal-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.login-btn.primary {
  width: 100%;
  height: 88rpx;
  background-color: #000000;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.login-btn.secondary {
  width: 100%;
  height: 80rpx;
  background-color: #FFFFFF;
  color: #666666;
  font-size: 28rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.login-btn::after {
  border: none;
}

.modal-footer {
  margin-top: 32rpx;
  text-align: center;
}
