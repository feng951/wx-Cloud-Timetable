/**app.wxss**/

/* 全局样式 */
page {
  width: 100%;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', PingFang SC, 'Helvetica Neue', Arial, sans-serif;
  background-color: #F5F7FA;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 容器基础样式 */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 全屏容器 */
.fullscreen {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 弹性布局工具类 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-1 {
  flex: 1;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 文字省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 按钮重置 */
button {
  margin: 0;
  padding: 0;
  background: none;
  border: none;
  font-size: inherit;
  line-height: inherit;
}

button::after {
  border: none;
}

/* 输入框重置 */
input {
  outline: none;
  border: none;
  background: transparent;
}

/* 滚动条隐藏 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  background: transparent;
}

/* 通用卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 通用按钮样式 */
.btn-primary {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary {
  width: 100%;
  height: 96rpx;
  background-color: #FFFFFF;
  color: #667eea;
  font-size: 32rpx;
  border: 2rpx solid #667eea;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 响应式字体大小 */
.text-xs {
  font-size: 22rpx;
}

.text-sm {
  font-size: 26rpx;
}

.text-base {
  font-size: 30rpx;
}

.text-lg {
  font-size: 34rpx;
}

.text-xl {
  font-size: 40rpx;
}

/* 间距工具类 */
.m-20 { margin: 20rpx; }
.m-30 { margin: 30rpx; }
.m-40 { margin: 40rpx; }

.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }
.p-40 { padding: 40rpx; }

/* 颜色变量 */
:root {
  --primary: #667eea;
  --primary-dark: #764ba2;
  --success: #43e97b;
  --warning: #fee140;
  --danger: #f5576c;
  --text-primary: #1A1A1A;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --bg-primary: #F5F7FA;
  --bg-secondary: #FFFFFF;
}
